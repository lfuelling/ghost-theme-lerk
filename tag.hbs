{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{> "header"}}

{{! The main content area on the homepage }}
<main id="content" class="content clearfix tag" role="main">

    {{#tag}}
        {{#if feature_image}}
            <figure class="tag-image">
                <div class="img" style="background-image: url({{img_url feature_image}})"><span class="hidden">Picture for the "{{name}}" tag.</span></div>
            </figure>
        {{/if}}

        <h1>{{name}}</h1>

        <p class="subtitle">{{description}}</p>

    {{/tag}}

    <div id="articles">
        {{! The tag below includes the post loop - partials/loop.hbs }}
        {{> "loop"}}
    </div>

    <div id="sidebar">
        {{> "sidebar"}}
    </div>

</main>
