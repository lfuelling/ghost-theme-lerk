{{! The big featured header }}
<header id="header">
    <nav class="header-nav" {{#if @site.cover_image}}style="background-image:url({{@site.cover_image}}){{/if}}">

        <div class="blog-header">
            <div class="blog-title">
                <a href="{{@site.url}}">{{@site.title}}<small>&nbsp;{{@site.description}}</small></a>
            </div>

            <form id="search-form">
                <div>
                    <input type="text" aria-label="search term" id="search-field"/>
                    <input type="submit" value="search">
                </div>
            </form>
        </div>

        <div id="search-results-wrapper">
            <button id="search-close" aria-label="close results"><i class="far fa-times-circle"></i></button>
            <ul id="results" aria-label="search results"></ul>
        </div>

        <!--Change this to customize the navigation-->
        <div class="taglist-wrapper clearfix">
            {{navigation}}

            <ul id="taglist-secondary" class="taglist secondary">
                <li role="presentation">
                    <a href="https://github.com/lfuelling" target="_blank">
                        <abbr title="GitHub"><i class="fab fa-github"></i></abbr>
                    </a>
                </li>
                <li role="presentation">
                    <a href="https://open.spotify.com/artist/49tddOBTRPy5cPeN96iwK5?si=lSzNXFFaRCu7qQDKcXjnQA"
                       target="_blank">
                        <abbr title="Spotify"><i class="fab fa-spotify"></i></abbr>
                    </a>
                </li>
                <li role="presentation">
                    <a href="https://soundcloud.com/1erk" target="_blank">
                        <abbr title="SoundCloud"><i class="fab fa-soundcloud"></i></abbr>
                    </a>
                </li>
                <li role="presentation">
                    <a href="https://music.apple.com/artist/lerk/553985212" target="_blank">
                        <abbr title="Apple Music"><i class="fab fa-itunes"></i></abbr>
                    </a>
                </li>
                <li role="presentation">
                    <a href="https://comm.network/@lerk" target="_blank">
                        <abbr title="Mastodon"><i class="fab fa-mastodon"></i></abbr>
                    </a>
                </li>
                <li role="presentation">
                    <a href="https://lerks.blog/rss" target="_blank">
                        <abbr title="RSS Feed"><i class="fas fa-rss"></i></abbr>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>
